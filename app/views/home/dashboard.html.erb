<h1>Dashboard</h1>
<h3> Stadistics graphics </h3>
<hr>
<h3> Users Management </h3>

<br>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role%></td>
        <td><%= link_to 'Change Status', update_status_path(user.id), class:"btn btn-success"%></td>
        <td><%= link_to 'Destroy', destroy_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

